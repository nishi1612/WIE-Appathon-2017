<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:background="#e8e8e7"
    android:layout_height="match_parent"
    tools:context="com.example.application.projectx.StartUp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="50dip"
        android:background="#13b586"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginLeft="10dp"/>


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Rural Scheme"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_gravity="center_horizontal|center_vertical"/>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Rural Scheme! \n "
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="50dip"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="redirect"
        android:text="An interface for farmer and retailer intercation!!\n Click here to redirect to login page"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />
    >

</LinearLayout>

    </ScrollView>
