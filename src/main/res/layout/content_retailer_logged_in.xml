<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:background="@drawable/gradientf"
    android:layout_height="match_parent"
    tools:context="com.example.application.projectx.RetailerLoggedIn">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e8e8e7"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#13b586"
        android:layout_marginTop="50dip"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginLeft="10dp"/>


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_gravity="center_horizontal|center_vertical"/>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="50dip"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:text="By choosing post option you can post the details of the crop you would like to buy \n By choosing search option you can search which farmers around have already harvested the vrop you recently added to wish list"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp" />

    <Button
        android:id="@+id/post"
        android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="#13b586"
        android:text="post"
        android:textColor="#fff"
        android:textSize="20dp"
        android:onClick="post"/>

    <!--<Button android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="update"
        android:textColor="#fff"
        android:textSize="13dp"
        android:background="#eb543b"/>-->

    <Button
        android:id="@+id/search"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#2683c2"
        android:text="search"
        android:textColor="#fff"
        android:textSize="20dp" />



</LinearLayout>
    </ScrollView>