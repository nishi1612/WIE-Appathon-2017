<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/gradientf"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:orientation="horizontal">
            <!-- Logo Start-->
            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->
        <!-- Footer Start -->
        <LinearLayout android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        </LinearLayout>
        <!-- Footer Ends -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#13b586"
            android:layout_marginTop="50dip"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <ImageView android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginLeft="10dp"/>


            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter info about crops"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal|center_vertical"/>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>
        </LinearLayout>


        <!-- Registration Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_marginTop="100dip"
            android:layout_below="@id/header">
            <!-- Full Name Label -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Crop you want to sell"
                android:textColor="@color/colorAccent" />
            <EditText android:id="@+id/reg_crop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Days till which the crop will not get damaged"
                android:textColor="@color/colorAccent" />
            <EditText android:id="@+id/reg_days"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Weight of crops(in kg)"
                android:textColor="@color/colorAccent" />
            <EditText android:id="@+id/reg_weight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Price at which you would like to sell your crop"
                android:textColor="@color/colorAccent" />
            <EditText android:id="@+id/reg_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:backgroundTint="@android:color/holo_blue_light"
                android:onClick="done"
                android:text="Submit" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>